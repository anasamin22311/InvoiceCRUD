@model Nop.Plugin.VoiceIn.CRUD.Models.ItemModel

<h2>Delete Item</h2>

<div>
    <h4>Are you sure you want to delete this item?</h4>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Model.Name</dd>
        <dt>Description</dt>
        <dd>@Model.Description</dd>
        <dt>Price</dt>
        <dd>@Model.Price</dd>
        <dt>Quantity</dt>
        <dd>@Model.Quantity</dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Item", new { id = Model.Id }, FormMethod.Post))
    {
        <button type="submit" class="btn btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
    }
</div>
